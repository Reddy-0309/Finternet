FROM node:16-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Compile contracts
RUN npm run compile

# Expose the Hardhat Network port
EXPOSE 8545

# Start Hardhat Network
CMD ["npx", "hardhat", "node", "--hostname", "0.0.0.0"]
